{% extends "home/base.html" %}
{% load static %}
{% load crispy_forms_tags %}
{% block content %}

<!-- Content -->
<div class="page-content">
    <!-- inner page banner -->
    <div class="dlab-bnr-inr bg-custom" style="background-image:url('{% static 'images/background/bg1.jpg' %}');">
        <div class="container">
            <div class="dlab-bnr-inr-entry text-white">
                <h1>Contact Us</h1>
                <p>Contact us for anything and we will reach out to you soon</p>
            </div>
        </div>
    </div>
    <!-- inner page banner END -->
    <div class="content-block">
        <div class="section-full content-inner bg-white contact-box style1">
            <div class="container">
                <div class="row">
                    <div class="col-xl-8 col-lg-7 m-b30 wow fadeInUp" data-wow-delay="0.2s">
                        <div class="section-head text-left">
                            <h2 class="title">Reach out to us</h2>
                            <p class="m-b0">Get in touch and let us know how we can help.</p>
                        </div>
                        <div class="dzFormMsg"></div>
                        <form method="post" class="dzForm">
                            {% csrf_token %}
                            <input type="hidden" value="Contact" name="dzToDo">
                            <div class="row">
                                
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <input name="name" type="text" id="id_name" required class="form-control" placeholder="Name">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <input name="email" type="email" id="id_email" class="form-control" required  placeholder="Email">
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <input type="tel"  name="mobile" id="id_mobile" pattern="[789][0-9]{9}" required class="form-control" placeholder="Mobile Number">
                                    </div>
                                </div>
                                <div class="col-md-12 col-sm-12">
                                    <div class="form-group">
                                        <textarea name="description" rows="4" id="id_description" class="form-control" required placeholder="Message"></textarea>
                                    </div>
                                </div>
                                
                                <div class="col-md-12 col-sm-12">
                                    <button name="submit" type="submit" value="Submit" class="btn radius-xl green btn-lg btn-aware">Send Message<span></span></button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="col-xl-4 col-lg-5 m-b30 d-flex align-items-center wow fadeInUp" data-wow-delay="0.4s">
                        <img class="content-img img-move2" src="{% static 'images/overview/pic3.png' %}"  alt="">
                    </div>
                </div>
                <div class="row content-inner-3">
                    <div class="col-lg-4 col-md-6 col-sm-12 wow fadeInUp" data-wow-delay="0.2s">
                        <div class="icon-bx-wraper content-info  m-b30 center">
                            <div class="icon-md gradient-two m-b30 m-t5">
                                <a href="javascript:void(0)" class="icon-cell text-white">
                                    <i class="fas fa-envelope-open-text"></i>
                                </a>
                            </div>
                            <div class="icon-content">
                                <h4 class="dlab-tilte m-b5">Email address</h4>
                                <p>info@stellar-ai.in</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6 col-sm-12 wow fadeInUp" data-wow-delay="0.4s">
                        <div class="icon-bx-wraper content-info m-b30 center">
                            <div class="icon-md gradient-four m-b30 m-t5">
                                <a href="javascript:void(0)" class="icon-cell text-white">
                                    <i class="fas fa-map-marker-alt"></i>
                                </a>
                            </div>
                            <div class="icon-content">
                                <h4 class="dlab-tilte m-b5">Office Location</h4>
<p>802, Rajhans Otium, </p>
<p>Above Trendsetter Shop,</p>
<p>Opposite Asha Parekh Hospital,</p>
<p>SV Road,</p>
<p>                                <p>Mumbai</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6 col-sm-12 m-b30 wow fadeInUp" data-wow-delay="0.6s">
                        <div class="contact-details">
                            <!-- <h2 class="text-secondry">Quick Support?</h2>
                            <div class="contact-user">
                                <img src="https://images.unsplash.com/photo-1527980965255-d3b416303d12?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=580&q=80" alt="">
                                <h5>Mahfuz Riad</h5>
                            </div> -->
                            <p>Want to get instant support ? Type away below.Schedule a short introductory call </p>
                            <span class="email-text">Contact: info@stellar-ai.in</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Content END-->

{% endblock content %}
